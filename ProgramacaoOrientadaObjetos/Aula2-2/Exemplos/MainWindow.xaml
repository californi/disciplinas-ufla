<Window x:Class="AnimalMatchingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jogo de Combinação" Height="500" Width="400"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Jogo de Combinação" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>
        
        <!-- Grade do jogo -->
        <Grid Grid.Row="1" x:Name="GameGrid" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- TextBlocks simples -->
            <TextBlock x:Name="TextBlock00" Grid.Row="0" Grid.Column="0" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock01" Grid.Row="0" Grid.Column="1" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock02" Grid.Row="0" Grid.Column="2" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock03" Grid.Row="0" Grid.Column="3" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            
            <TextBlock x:Name="TextBlock10" Grid.Row="1" Grid.Column="0" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock11" Grid.Row="1" Grid.Column="1" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock12" Grid.Row="1" Grid.Column="2" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock13" Grid.Row="1" Grid.Column="3" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            
            <TextBlock x:Name="TextBlock20" Grid.Row="2" Grid.Column="0" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock21" Grid.Row="2" Grid.Column="1" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock22" Grid.Row="2" Grid.Column="2" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock23" Grid.Row="2" Grid.Column="3" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            
            <TextBlock x:Name="TextBlock30" Grid.Row="3" Grid.Column="0" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock31" Grid.Row="3" Grid.Column="1" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock32" Grid.Row="3" Grid.Column="2" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
            <TextBlock x:Name="TextBlock33" Grid.Row="3" Grid.Column="3" 
                       Text="?" FontSize="24" FontWeight="Bold" 
                       Background="LightBlue" Margin="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       MouseLeftButtonDown="TextBlock_Click"/>
        </Grid>
        
        <!-- Informações -->
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock x:Name="StatusText" Text="Pares encontrados: 0/8" 
                       FontSize="16" HorizontalAlignment="Center"/>
            <Button x:Name="RestartButton" Content="Novo Jogo" 
                    FontSize="16" Margin="10"
                    Click="RestartButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
